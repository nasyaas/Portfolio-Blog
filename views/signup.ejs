<% include partials/header %>

<div class="containerLogin">
    <div class="box">
        <p id="loginTitle" class="suTitle">Sign Up</p>
        <img id="lhImg" class="suImg" src="https://images.unsplash.com/photo-1485968579580-b6d095142e6e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=933&q=80"
            alt="plaid coat">
        <form action="/user/signup" method="POST">
            <input type="text" name="firstname" placeholder="First Name" value="<%= typeof name != 'undefined' ? name : '' %>">
            <input type="text" class="email" placeholder="Email" value="<%= typeof email != 'undefined' ? email : '' %>">
            <input type="text" name="password" id="" placeholder="Password" value="<%= typeof password != 'undefined' ? password : '' %>">
        </form>
        <button class="loginBtn">Submit</button>
        <p class="bottomText"> Already have an account?
            <a href="/user/login">Log In</a></p>
    </div>
</div>

<% include partials/footer %>